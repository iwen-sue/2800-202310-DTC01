<%- include("templates/header") %>
<link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<link rel="stylesheet" href="/assets/common.css" />
<link rel="stylesheet" href="/assets/login.css" />   
<link rel="stylesheet" href="/assets/easteregg.css">
<script src="/scripts/easteregg.js" defer></script>


</head>

    <body>
        <%- include("templates/nav") %>
        <% if (typeof success !== 'undefined') { %>
            <div class="alert alert-success" id="alertBox">
                <%= success %>
            </div>
        <% } %>
        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger d-flex justify-content-center mx-auto mb-0" id="alertBox" role="alert">
                <p class="alert-heading">
                    <% if (errorType === 'InvalidEmailFormat') { %>
                        Invalid email format.<br> Please enter a valid email address.
                    <% } else if (errorType === 'UserNotFound') { %>
                        User is not found.
                    <% } else if (errorType === 'IncorrectPassword') { %>
                        Password is not correct.
                    <% } %>
                </p>
            </div>
        <% } %>
        <main class="form-signin w-100 m-auto">
            <div class="d-flex gap-2 justify-content-center py-5">
                <form class="text-center" action="/login" method="post">
                    <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt=""
                        width="72" height="72">
                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>


                    <div class="form-floating">
                        <input type="email" class="form-control" id="email" name="email" placeholder="">
                        <label for="email">Email address</label>
                    </div>
                    

                    <div class="form-floating">
                        <input type="password" class="form-control" id="password" name="password" placeholder="">
                        <label for="password">Password</label>
                        <% if (groupToken != null) {%>
                            <input type="hidden" name="groupToken" id="groupToken" value="<%- groupToken %>">
                        <% } %>
                    </div>
                    <br>
                    <button class="btn btn-block loginBtn" type="submit" value="login">Sign in</button>
                    <br>
                    <a href="/forgotPassword" class="forgotId">Forgot password?</a>
                </form>
                
            </div>
        </main>
        <script src="/scripts/resetPassword.js"></script>
    </body>