<%- include('templates/header') %>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/assets/common.css" />
    <!-- cite css or js files here -->
    <style>
        input[type=text] {
            width: 65%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            border: none;
            border-bottom: 1px solid gray;
        }

        p {
            color: var(--text)
        }

        .input-container {
            display: flex;
            justify-content: center;
        }

        .centered-input {
            text-align: center;
        }

        #group-title {
            color: var(--pink)
        }
    </style>
    </head>

<body>
    <%- include('templates/nav') %>
    <% if (error !=null) { %>
        <div class="alert alert-danger d-flex justify-content-center mx-auto" style="width: 80%" role="alert">
            <p class="alert-heading">
                <% if (error.includes('not allowed to be empty')) { %>
                    Group name cannot be empty.
                <% } else if (error.includes('must be less than or equal to 20 characters long')) {%>
                    Group name cannot be more than 20 characters long.
                <% } else {%>
                    Group name already exists!
                <% } %>
            </p>
        </div>
    <% } %>

    <div class="container">
        <form class="card text-center m-4" action="/groupconfirm" method="post">
            <div class="card-title mt-3">
                <h1>Create Your Group!</h1>
            </div>
            <div class="card-body">
                <h3 id="group-title">Choose Your Group Name</h3>
                <p>Max 20 characters.</p>

                <div class="input-container">
                    <input type="text" id="groupName" class="centered-input" name="groupName">
                </div>
                <br><br>
                <div class="buttonGroup">
                    <button class="btn btn-secondary" type="button"
                        onclick="window.location.href='/userprofile'">Cancel</button>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
            <%- include('templates/bottomNav') %>
    </body>