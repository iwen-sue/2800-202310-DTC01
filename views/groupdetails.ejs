</head>
<body id="groupDetailsPage">
    <%- include('templates/nav') %>
    <div class="container text-center groupDetails">
        <h1>Group: <%- groupName %></h1>
        <h2>Members</h2>
        <ul>
            <% for(var i = 0; i < group.length; i++) { %>
                <li><%- group[i] %></li>
            <% } %>
        </ul>
        <button class="btn btn-primary" data-toggle="modal" data-target="#addMemberModal">Add Member</button>
        <button class="btn btn-secondary">Remove Member</button>
    </div>
    <div class="modal" id="addMemberModal"tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <form class="modal-content" action="/invite" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Add a Member to <%- groupName %></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Enter invitee's email:</p>
                    <input type="text" name="inviteeEmail" id="inviteeEmail">
                    <input type="hidden" name="groupID" value="<%- groupID %>">
                </div>
                <div class="modal-footer">
                    <button type="submit" id="inviteBtn" class="btn btn-primary" >Send Invite</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('templates/bottomNav') %>
</body>