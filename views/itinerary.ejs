<%- include("templates/header") %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>

    <!-- import date picker -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/css/bootstrap-datepicker.min.css">
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/js/bootstrap-datepicker.min.js"></script>


<!-- Bootstrap Time Picker CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-timepicker@0.5.2/css/bootstrap-timepicker.min.css">

<!-- Bootstrap Time Picker JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-timepicker@0.5.2/js/bootstrap-timepicker.min.js"></script>


    <!-- google icons -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link rel="stylesheet" href="/assets/common.css" />
    <link rel="stylesheet" href="/assets/itinerary.css" />

    <!-- cite css or js files here -->
    </head>

    <body style="height:100%;width:100%;">
        <%- include("templates/nav") %>

                <% if (groupName != "Join a group First!") { %>
                <h2 class="itineraryName"><%- groupName %><p class="countryName">destination: <%- country %></p></h2>
                
                <div class="itineraryPlan">
                    <p style="text-align: center;">no record to display</p>
                </div>
                <div class="bottomContent">
                    <% if (groupName !== "Join a group First!") { %>
                        <button type="button" id="makeItinerary" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#adjustDateModal">adjust dates</button>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#makeNewModal">make new</button>
                      <% } %>

                </div>
                <%} else{ %>
                    <div id="landingDisplay">
                    <div>
                    <h2 style="text-align: center;">Hi <%- userName %>!</h2>
                    <p class="itineraryName">Create or join a group to start your journey</p>
                    <div style="padding: 10vh 5vw; text-align: center;">
                        <button type="button" class="btn btn-primary landingButtons" onclick="window.location.href='/creategroup'">Create Group</button>
                        <button type="button" class="btn btn-primary landingButtons" onclick="window.location.href='/userprofile'">Join Group</button>

                    </div>
                    </div>
                    </div>
                    <% } %>
                


            <%- include("templates/makeItinerary") %>


            <%- include("templates/bottomNav") %>
            <script type="text/javascript" src="/scripts/itinerary.js" groupName='<%- groupName %>'></script>


    </body>

    </html>