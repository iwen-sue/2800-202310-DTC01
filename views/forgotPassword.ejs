<%- include("templates/header") %>
<link rel="stylesheet"
href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="/assets/common.css" />
<link rel="stylesheet" href="/assets/login.css" />   
    </head>

    <body>
        <%- include("templates/nav") %>
            <% if (typeof success !=='undefined' ) { %>
                <div class="alert alert-success" id="alertBox">
                    <%= success %>
                </div>
                <% } %>

                <% if (typeof error !=='undefined' && error==='UserNotFound' ) { %>
                    <div class="alert alert-danger d-flex justify-content-center mx-auto mb-0" id="alertBox"
                         role="alert">
                        <p class="alert-heading">Email does not exist.</p>
                    </div>
                    <% } %>

                    <main class="form-signin w-100 m-auto">
                        <div class="d-flex gap-2 justify-content-center py-5">

                            <form class="text-center"action="/forgotPassword" method="post">
                                <p class="mb-3 font-weight-normal text-left">Forgot Password</p>
                                <div class="form-floating">
                                <input type="email" class="form-control form-control-lg" id="toFIndPwemail" name="email" placeholder="Enter your email address">
                                <label for="email">Email address</label>
                                <br>
                                <button class="btn btn-block resetBtn" type="submit" name="reset-request-submit">Reset Password</button>
                            </div>
                            </form>
        
                        </div>
                    </main>


    <script src="/scripts/resetPassword.js"></script>
    </body>


